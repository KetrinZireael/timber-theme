{% extends "base.twig" %}

{% block content %}
{#	<h2>{{ foo }}</h2>#}
{#	<p>{{ qux }}</p>#}

	<section class="filer-project">
		<div class="container">
			<div class="row">
				<div class="col-12">
					<h1 class="text-center">Проекти</h1>
					<h2 class="text-center">Нижче представлені деякі з робіт, виконаних компанією за останнє півріччя</h2>
				</div>
			</div>
		</div>
	</section>

	<div class="index-post">
		<div class="container container-custom">
			<div class="row">
				<div class="col-12">
					<div class="post-wrap">
						{% for post in posts %}
							{% include ['tease-'~post.post_type~'.twig', 'tease.twig'] %}
						{% endfor %}
					</div>
				</div>
			</div>
		</div>
	</div>



	<div class="container container-custom">
		<div class="row">
			<div class="col-12">
				{% include 'partial/pagination.twig' with { pagination: posts.pagination({show_all: false, mid_size: 3, end_size: 2}) } %}
			</div>
		</div>
	</div>
{% endblock %}
